{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run npm start in current JavaScript file",
            "type": "shell",
            "command": "npm",
            "args": ["start", "${file}"],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
